<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="DikwaloPU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider> 
    <jta-data-source>java:jboss/datasources/bookstore</jta-data-source>
    <class>za.co.tshim.model.SetshwantshoSaLekwalo</class>
    <class>za.co.tshim.model.MokwadiWaLekwalo</class>
    <class>za.co.tshim.model.MohutaWaLekwalo</class>
    <class>za.co.tshim.model.Lekwalo</class>
    <class>za.co.tshim.model.PuoYaLokwalo</class>
    <class>za.co.tshim.model.LekwaloException</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.driver_class"  value="com.mysql.jdbc.Driver"/>      
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/borekisetsoJwaMakwalo?useUnicode=true&amp;characterEncoding=UTF-8"/>
      <property name="hibernate.connection.password" value="root"/>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.dialect"  value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="connection.pool_size" value="10"/>
      <property name="hibernate.current_session_context_class" value="thread"/>
      <property name="hibernate.connection.useUnicode" value="true"/>
      <property name="hibernate.connection.characterEncoding" value="UTF-8"/>
      <property name="hibernate.connection.charSet" value="UTF-8"/>     
    </properties>  
  </persistence-unit>
</persistence>
